<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SearchByFilterFragment"
    android:orientation="vertical"
    android:padding="@dimen/padding_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SEARCH BY FILTERS"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_search_by_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search By Party"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="@dimen/padding_16"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"/>
    <TextView
        android:id="@+id/tv_search_by_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search By Frame(status)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="@dimen/padding_16"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"/>

    <TextView
        android:id="@+id/tv_search_by_hastee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search By Hastee"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="@dimen/padding_16"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_upload_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOAD PHOTOS"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>